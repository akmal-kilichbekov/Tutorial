<mvc:View
  controllerName="rroot.controller.Tools"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc"
   displayBlock="true" >
    <Panel
        headerText="{i18n>helloPanelTitle}"
        class="sapUiResponsiveMargin"
        width="auto">
        <content>
        <Button
				   text="Ð¡ustomer List"
           icon="sap-icon://customer"
			  	 press=".goToCustomer"
           class="sapUiSmallMarginEnd" />
        <Button 
          id="openDialogButton"
          icon="sap-icon://world"
          text="{i18n>dialogButton}"
          press=".openDialog"
          class="sapUiSmallMarginEnd"/>

        <Button
                text="Say Hello"
                press=".onShowText"
                class="sapUiSmallMarginEnd"/>
            <Input
                value="{/word}"
                description="Hello, {/word}"
                valueLiveUpdate="true"
                width="60%"/>
        </content>
    </Panel>
</mvc:View>