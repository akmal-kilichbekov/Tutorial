<mvc:View	
	xmlns="sap.ui.table"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:u="sap.ui.unified"
	xmlns:c="sap.ui.core"
	xmlns:m="sap.m"
    height="100%">
	<m:Page
		showHeader="false"
		enableScrolling="false"
		class="sapUiContentPadding">
		<m:content>
			<Table
				rows="{customer>/Customers}"
				title="Products"
				selectionMode="MultiToggle"
				visibleRowCount="20"
				paste="onPaste">
				<columns>
					<Column width="11rem">
						<m:Label text="Company Name" />
						<template>
							<m:Text text="{customer>CompanyName}" wrapping="false" />
						</template>
					</Column>	
                    <Column width="11rem">
						<m:Label text="Contact Name" />
						<template>
							<m:Text text="{customer>ContactName}" wrapping="false" />
						</template>
					</Column>	
                   <Column width="11rem">
						<m:Label text="Contact Title" />
						<template>
							<m:Text text="{customer>ContactTitle}" wrapping="false" />
						</template>
					</Column>
                    <Column width="11rem">
						<m:Label text="Address" />
						<template>
							<m:Text text="{customer>Address}" wrapping="false" />
						</template>
					</Column>
                    <Column width="11rem">
						<m:Label text="City" />
						<template>
							<m:Text text="{customer>City}" wrapping="false" />
						</template>
					</Column>	
					<Column width="11rem">
						<m:Label text="Region" />
						<template>
							<m:Text text="{customer>Region}" wrapping="false" />
						</template>
					</Column>
					<Column width="11rem">
						<m:Label text="Country" />
						<template>
							<m:Text text="{customer>Country}" wrapping="false" />
						</template>
					</Column>		
				</columns>
			</Table>
		</m:content>
	</m:Page>	
</mvc:View>